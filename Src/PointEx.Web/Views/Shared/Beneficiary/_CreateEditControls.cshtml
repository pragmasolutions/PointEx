@model PointEx.Web.Models.BeneficiaryForm
<div class="form-group">
    <label class="col-md-2 control-label" for="Name">Nombre y Apellido</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" for="IdentificationNumber">DNI</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.IdentificationNumber)
        @Html.ValidationMessageFor(model => model.IdentificationNumber)
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" for="Sex">Sexo</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Sex)
        @Html.ValidationMessageFor(model => model.Sex)
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" for="TownId">Localidad</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.TownId)
        @Html.ValidationMessageFor(model => model.TownId)
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" for="Address">Dirección</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address)
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" for="Neighborhood">Barrio</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Neighborhood)
        @Html.ValidationMessageFor(model => model.Neighborhood)
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" for="TelephoneNumber">Número de Teléfono</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.TelephoneNumber)
        @Html.ValidationMessageFor(model => model.TelephoneNumber)
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" for="BirthDate">Fecha de Nacimiento</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.BirthDate)
        @Html.ValidationMessageFor(model => model.BirthDate)
    </div>
</div>
@if (PointEx.Web.Configuration.AppSettings.Theme == PointEx.Web.Configuration.ThemeEnum.TarjetaVerde)
{
    <div class="form-group">
        <label class="col-md-2 control-label" for="EducationalInstitutionId">Establecimiento Educativo</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EducationalInstitutionId)
            @Html.ValidationMessageFor(model => model.EducationalInstitutionId)
        </div>
    </div>
}
else
{
    @Html.HiddenFor(model => model.EducationalInstitutionId)
}

@Html.HiddenFor(model => model.Theme)

<div class="form-group">
    <label class="col-md-2 control-label" for="Email">E-mail</label>
    <div class="col-md-10">
        @Html.EditorFor(model => model.Email)
        @Html.ValidationMessageFor(model => model.Email)
    </div>
</div>
