@using Framework.Common.Web.Helpers
@model PointEx.Web.Models.BenefitListFiltersModel
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Index", "Benefit", FormMethod.Get, new { @class = "form-horizontal" }))
        {
            <div class="input-group pull-right" id="benefit-search">
                @Html.TextBoxFor(model => model.Criteria, new { @class = "benefit-search-input form-control", placeholder = "Buscar Beneficios" })
                <div class="input-group-btn">
                    <div class="btn-group" role="group">
                        <div class="dropdown dropdown-lg">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                            <div class="dropdown-menu dropdown-menu-right keep-open" role="menu">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CategoriaId, new { @class = "control-label col-lg-3" })
                                    @Html.EditorFor(model => model.CategoriaId)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TownId, new { @class = "control-label col-lg-3" })
                                    @Html.EditorFor(model => model.TownId)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ShopId, new { @class = "control-label col-lg-3" })
                                    @Html.EditorFor(model => model.ShopId)
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-3">
                                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                        <button type="reset" class="btn btn-default"><span class="glyphicon glyphicon-erase" aria-hidden="true"></span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
