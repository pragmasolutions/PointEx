@using PointEx.Web.Configuration
@using System.Web.Optimization
@using System.Web.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@AppSettings.ThemeTitle</title>

    @Styles.Render("~/Content/css")
    @Styles.Render(String.Format("~/Themes/{0}/css", PointEx.Web.Configuration.AppSettings.Theme))
    @Styles.Render("~/Content/front-end/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>
<body>
    @Html.Partial("_FacebookInit")
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top pointex-header" role="navigation">
        <div class="container" style="width:100%">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (AppSettings.Theme == ThemeEnum.TarjetaVerde)
                {
                    <a href="/Home">
                        <img src="/Content/themes/Jovenes/images/marcaGrande.png" height="60px" style="margin-right: 10px;margin-top: 10px" />
                    </a>
                    @*@Html.ActionLink(PointEx.Web.Configuration.AppSettings.ThemeTitle, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                }
                else
                {
                    <a href="/Home">
                        <img src="/Content/themes/TekovePoti/images/TekovePoti-Logo.png" height="100" style="margin-right: 10px; margin-bottom: 5px" />
                    </a>
                }
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav public paddingTekove">
                    <li>@Html.ActionLink("¿QUE ES?", "About", "Home")</li>
                    <li>@Html.ActionLink("ADHERIR MI COMERCIO", "AddMyShop", "Home")</li>
                    <li>@Html.ActionLink("CATALOGO", "Index", new { area = "Beneficiary", controller = "Prize" })</li>
                    <li>@Html.ActionLink("PREGUNTAS FRECUENTES", "FrequentlyAskedQuestions", "Home")</li>
                    <li>@Html.ActionLink("REGISTRARME", "AddBeneficiary", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div id="wrapper">
        <div class="main-background">
            <div id="container" class="container">
                <div class="container alert-container" style="padding-left: 0 !important;"></div>
                <div class="left-container col-lg-10">
                    @RenderSection("banner", required: false)
                    <div style="background-color: #FFF; padding: 5px 20px;">
                        @RenderSection("ContainerTop", required: false)
                        <div class="spacer"></div>
                        <div class="spacer"></div>
                        <div class="row">
                            <div class="col-lg-12">
                                @RenderBody()
                            </div>
                        </div>
                        <div class="push"></div>
                    </div>
                </div>
                <div class="rigth-container col-lg-2">
                    <div class="fb-page" data-href="https://www.facebook.com/tekove.poti/" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true" data-show-posts="true">
                        <div class="fb-xfbml-parse-ignore">
                            <blockquote cite="https://www.facebook.com/tekove.poti/"><a href="https://www.facebook.com/tekove.poti/">Facebook</a></blockquote>
                        </div>
                    </div>

                </div>
                <br/>
                <div></div>
                <div class="rigth-container col-lg-2">
                   @* <a class="twitter-timeline" href="https://twitter.com/direcdejuventud" data-widget-id="656569976451633152">Tweets por la direcdejuventud.</a>*@
                    <a class="twitter-timeline" href="https://twitter.com/TekovePoti" data-widget-id="677513184803164164">Tweets por TekovePoti.</a>
                </div>
            </div>
        </div>
    </div>

@*Colocar Footer position:relative*@
        @Html.Partial("_Footer")
    @*<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/globalize")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")

    @Html.Partial("_TwitterInit")
    @Html.Partial("_GooglePlusInit")

    @RenderSection("scripts", required: false)
    @Html.Partial("_Alerts")

    <script type="text/javascript">
        $(document).ready(function () {
            if ((window.location.origin).toString() + '/' == window.location.href || window.location.href == (window.location.origin).toString() + '/Home'
            || window.location.href == (window.location.origin).toString() + '/Home/Index') {
                $(".rigth-container").removeClass("hidden");
                $(".left-container").removeClass("col-lg-12");
                $(".rigth-container").addClass("col-lg-2");
                $(".left-container").addClass("col-lg-10");
                $(".left-container").attr("style", "width:80%");
            } else {
                $(".rigth-container").addClass("hidden");
                $(".rigth-container").removeClass("col-lg-2");
                $(".left-container").removeClass("col-lg-10");
                $(".left-container").attr("style", "width:100%");
                $(".left-container").addClass("col-lg-12");
            }

            $("body").tooltip({ selector: '[data-toggle=tooltip]' });
        });
    </script>

</body>
</html>
