
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>

    @Styles.Render("~/Content/css")
    @Styles.Render(String.Format("~/Themes/{0}/css", PointEx.Web.Configuration.AppSettings.Theme))
    @Styles.Render("~/Content/front-end/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    @Html.Partial("_FacebookInit")
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top pointex-header" role="navigation">
        <div class="container" style="width:1300px">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @switch (PointEx.Web.Configuration.AppSettings.Theme)
                {
                    case "Jovenes":
                        @Html.ActionLink("TARJETA JÓVEN", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        break;
                    case "Tekove":
                    @Html.ActionLink("TEKOVE POTI", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        break;
                }
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav public">
                    <li>@Html.ActionLink("¿COMO FUNCIONA?", "Index", "Home")</li>
                    <li>@Html.ActionLink("ADERIR MI COMERCIO", "AddMyShop", "Home")</li>
                    <li>@Html.ActionLink("PREGUNTAS FRECUENTES", "FrequentlyAskedQuestions", "Home")</li>
                    <li>@Html.ActionLink("CATALOGO DE PREMIOS", "Index", new { area = "Beneficiary", controller = "Prize" })</li>
                    <li>@Html.ActionLink("REGISTRARME", "AddBeneficiary", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
<div id="wrapper">
    <div class="main-background">
        <div class="container">
            <div style="background-color: #FFF; margin: 0 4px;">
                @RenderSection("banner", required: false)
                <div class="container alert-container"></div>
                @RenderSection("ContainerTop", required: false)
                <div class="spacer"></div>
                <div class="spacer"></div>
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>

                <div class="push"></div>
            </div>
        </div>
        <div class="line-bottom"></div>
    </div>
</div>

    <!-- Footer -->
    <footer class="text-center">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4 text-align-left">
                        <h3>Ayuda</h3>
                        <p><a href="/Home/FrequentlyAskedQuestions" class="white">Preguntas Frecuentes</a></p>
                        <p><a href="/Home/TermsAndConditions" class="white">Terminos y Condiciones</a></p>
                        <p><a href="/Home/InformationRequest" class="white">Consultas</a></p>
                    </div>
                    <div class="footer-col col-md-4">
                        <h4>Seguinos en</h4>
                        <ul class="list-inline">
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-google-plus"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="footer-col col-md-4">
                        <h3></h3>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; PointEx
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/globalize")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")

    @Html.Partial("_TwitterInit")
    @Html.Partial("_GooglePlusInit")

    @RenderSection("scripts", required: false)
    @Html.Partial("_Alerts")
</body>
</html>
