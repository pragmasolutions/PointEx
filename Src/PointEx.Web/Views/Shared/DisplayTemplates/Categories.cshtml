@using Framework.Common.Web.Extensions
@using PointEx.Service
@model IEnumerable<int>
@{
    var service = IocContainer.GetContainer().Get<ICategoryService>();
    var selectList = service.GetAll().ToSelectListItem(Model, t => t.Id, t => t.Name, t => t.Id.ToString());
}

@Html.DropDownList("", selectList, "Seleccione Categorias", new { @class = "form-control select2-control", placeholder = "Categorias", multiple = "multiple" , disabled = true})