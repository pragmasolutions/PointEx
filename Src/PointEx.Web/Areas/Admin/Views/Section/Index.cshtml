@using Microsoft.Web.Mvc
@using PointEx.Web.Infrastructure.Extensions
@model IList<PointEx.Entities.Section>

<h3>Secciones</h3>

<div class="spacer">
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Maximo Número de Items</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var sec in Model)
        {
            <tr>
                <td>@sec.Name</td>
                <td>@sec.MaxNumberOfItems</td>
                <td>
                   @Html.ActionLink("Gestionar Items", "Index", "SectionItem", routeValues: new { area = "Admin", sectionId = sec.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>