@model PointEx.Web.Models.PrizeForm

@{
    ViewBag.Title = PointExResources.DetailPrizeTitle;
}

<h3>@PointExResources.DetailPrizeTitle</h3>
@Html.BackButton("Index", "Prize", "Admin")
<hr />
<div class="form-horizontal">
    @Html.DisplayForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @using (Html.BeginForm("Delete", "Prize", new { id = Model.Id }, FormMethod.Post, new { id = "delete-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ActionLink("Editar Premio", "Edit", "Prize", routeValues: new { area = "Admin", Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                <button type="submit" class="btn btn-warning">Eliminar Premio</button>
            }
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(function () {
            $("#delete-form").on("submit", function () {
                return confirm("Esta seguro que desea eliminar este premio?  Esta operacion no se puede deshacer.");
            });
        });
    </script>
}
