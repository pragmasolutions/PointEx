@using PagedList.Mvc
@using PointEx.Web.Configuration
@using PointEx.Entities.Enums
@model PointEx.Web.Models.BeneficiaryListModel


@section banner{
    <img src="/Content/images/banner-beneficiarios.jpg" width="100%" alt="Beneficios" /><br /><br />
}

@Html.ActionLink("Crear Beneficiario", "Create", "Beneficiary", routeValues: new { area = "Admin" }, htmlAttributes: new { @class = "btn btn-primary" })

@Html.FilterButton()

<div class="spacer">
</div>

@Html.Partial("Beneficiary/_Filters", Model.Filters)

<div class="spacer">
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre y Apellido</th>
            <th>Direccion</th>
            <th>Barrio</th>
            <th>Localidad</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var beneficiary in Model.List)
        {
            <tr>
                <td>@Html.ActionLink(beneficiary.Name, "Detail", "Beneficiary", routeValues: new { area = "Admin", beneficiary.Id }, htmlAttributes: null)</td>
                <td>@beneficiary.Address</td>
                <td>@beneficiary.Neighborhood</td>
                <td>@beneficiary.TownName</td>
                <td>@beneficiary.BenefitStatusName</td>
                <td class="text-right">
                    @if (ViewBag.ViewMode == StatusEnum.Pending)
                    {
                        <button type="button" class="btn btn-primary" onclick="location.href = 'Beneficiary/Detail/@beneficiary.Id';">Detalle</button>
                    }
                    @if (ViewBag.ViewMode == StatusEnum.Approved)
                    {
                        @Html.Partial("Beneficiary/_DetailTyCButton", new ViewDataDictionary { { "Id", beneficiary.Id } })
                        @Html.Partial("Beneficiary/_RejectButton", new ViewDataDictionary { { "Id", beneficiary.Id } })
                    }
                    @if (ViewBag.ViewMode == StatusEnum.Rejected)
                    {
                        @Html.Partial("Beneficiary/_ApproveButton", new ViewDataDictionary { { "Id", beneficiary.Id } })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model.List, page => Url.Action("Index", Model.Filters.GetRouteValues(page)))