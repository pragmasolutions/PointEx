@model PointEx.Web.Models.BeneficiaryForm

@{
    ViewBag.Title = PointExResources.BeneficiaryDetailTitle;
}

<h3>@PointExResources.BeneficiaryDetailTitle</h3>


@Html.BackButton("Index", "Beneficiary", "Admin")
@Html.ActionLink("Getionar Tarjetas", "Cards", "Beneficiary", routeValues: new { area = "Admin", Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
<hr />
<div class="form-horizontal">
    @Html.Partial("_DetailControls")
    @*@Html.DisplayForModel()*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @using (Html.BeginForm("Delete", "Beneficiary", new {id = Model.Id}, FormMethod.Post, new {id = "delete-form"}))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-12">
                        @Html.ActionLink("Editar Beneficiario", "Edit", "Beneficiary", routeValues: new {area = "Admin", Model.Id}, htmlAttributes: new {@class = "btn btn-primary"})
                        <button type="submit" class="btn btn-warning">Eliminar Beneficiario</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(function () {
            $("#delete-form").on("submit", function () {
                return confirm("Esta seguro que desea eliminar este beneficiario?  Esta operacion no se puede deshacer.");
            });
        });
    </script>
}
