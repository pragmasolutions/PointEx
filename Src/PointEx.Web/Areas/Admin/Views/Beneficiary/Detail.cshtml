@model PointEx.Web.Models.BeneficiaryForm

@{
    ViewBag.Title = PointExResources.BeneficiaryDetailTitle;
}

<h3>@PointExResources.BeneficiaryDetailTitle</h3>


@Html.BackButton("Index", "Beneficiary", "Admin")
@Html.ActionLink("Getionar Tarjetas", "Cards", "Beneficiary", routeValues: new { area = "Admin", Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
&nbsp; &nbsp; &nbsp;
@if (ViewBag.ShowApprovalButtons)
{
    @Html.Partial("Beneficiary/_RejectButton", new ViewDataDictionary { { "Id", Model.Id } })
    @Html.Partial("Beneficiary/_ApproveButton", new ViewDataDictionary { { "Id", Model.Id } })
}
<hr />
<div class="form-horizontal">
    <div class="form-group">
        @Html.BootstrapLabelFor(model => model.Name)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.BootstrapLabelFor(model => model.IdentificationNumber)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.IdentificationNumber)
        </div>
    </div>
    <div class="form-group">
        @Html.BootstrapLabelFor(model => model.Sex)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Sex)
        </div>
    </div>
    <div class="form-group hiddenByBenefitType">
        @Html.BootstrapLabelFor(model => model.TownId)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.TownId)
        </div>
    </div>
    <div class="form-group hiddenByBenefitType">
        @Html.BootstrapLabelFor(model => model.Address)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Address)
        </div>
    </div>
    <div class="form-group">
        @Html.BootstrapLabelFor(model => model.Neighborhood)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Neighborhood)
        </div>
    </div>
    <div class="form-group">
        @Html.BootstrapLabelFor(model => model.TelephoneNumber)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.TelephoneNumber)
        </div>
    </div>
    <div class="form-group">
        @Html.BootstrapLabelFor(model => model.BirthDate)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.BirthDate)
        </div>
    </div>
    <div class="form-group">
        @Html.BootstrapLabelFor(model => model.Email)
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>
    @if (!ViewBag.ShowApprovalButtons)
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @using (Html.BeginForm("Delete", "Beneficiary", new { id = Model.Id }, FormMethod.Post, new { id = "delete-form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.ActionLink("Editar Beneficiario", "Edit", "Beneficiary", routeValues: new { area = "Admin", Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                            <button type="submit" class="btn btn-warning">Eliminar Beneficio</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section scripts
{
    <script>
        $(function () {
            $("#delete-form").on("submit", function () {
                return confirm("Está seguro que desea eliminar este beneficiario?  Esta operación no se puede deshacer.");
            });
        });
    </script>
}

<style>
    .rejected-form, .approved-form {
        display: inline;
    }

        .rejected-form button {
            background-color: #FB362D !important;
            border-color: darkred !important;
        }

            .rejected-form button:hover {
                background-color: orangered !important;
            }
</style>