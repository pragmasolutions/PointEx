@model PointEx.Web.Models.BeneficiaryListFiltersModel

<div id="filter-container" class="collapse">
    @using (Html.BeginForm("Index", "Beneficiary", FormMethod.Get))
    {
        <div class="row">
            <div class="form-group col-sm-3">
                @Html.EditorFor(model => model.Criteria)
            </div>
            <div class="form-group col-sm-3">
                @Html.EditorFor(model => model.TownId)
            </div>
            <div class="form-group col-sm-3">
                @Html.EditorFor(model => model.EducationalInstitutionId)
            </div>
            <div class="col-sm-3">
                <button type="submit" class="btn btn-default pull-left"><span class="glyphicon glyphicon-search"></span></button>
            </div>
        </div>
    }
</div>