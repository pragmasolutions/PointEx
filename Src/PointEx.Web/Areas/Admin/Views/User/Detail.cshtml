@model PointEx.Web.Models.UserForm

@{
    ViewBag.Title = PointExResources.UserDetailTitle;
}

<h3>@PointExResources.UserDetailTitle</h3>
@Html.BackButton("Index", "User", "Admin")
<hr />
<div class="form-horizontal">
    @Html.DisplayForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @using (Html.BeginForm("Delete", "User", new { id = Model.Id }, FormMethod.Post, new { id = "delete-form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-lg-12">
                        @Html.ActionLink("Editar Usuario", "Edit", "User", routeValues: new { area = "Admin", Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                        <button type="submit" class="btn btn-warning">Eliminar Usuario</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(function () {
            $("#delete-form").on("submit", function () {
                return confirm("Esta seguro que desea eliminar este usuario?  Esta operación no se puede deshacer.");
            });
        });
    </script>
}
