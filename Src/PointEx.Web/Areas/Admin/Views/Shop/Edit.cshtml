@model PointEx.Web.Models.ShopForm

@{
    ViewBag.Title = PointExResources.EditShopTitle;
}

<h2>@PointExResources.EditShopTitle</h2>
@using (Html.BeginForm("Edit", "Shop", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Issue" class="btn btn-default" />
        </div>
    </div>
}