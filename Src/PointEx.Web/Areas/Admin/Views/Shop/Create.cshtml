@model PointEx.Web.Models.ShopForm

@{
    ViewBag.Title = PointExResources.CreateShopTitle;
}

<h3>@PointExResources.CreateShopTitle</h3>
@Html.BackButton("Index", "Shop", "Admin")
<hr />
@using (Html.BeginForm("Create", "Shop", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear Comercio" class="btn btn-default" />
        </div>
    </div>
}