@model IEnumerable<PointEx.Entities.Shop>

<h3>Comercios</h3>
@Html.ActionLink("Crear", "Create", "Shop", routeValues: new { area = "Admin" }, htmlAttributes: new { @class = "btn btn-primary" })
<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Localidad</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var shop in Model)
        {
            <tr>
                <td>@Html.ActionLink(shop.Name, "Detail", "Shop", routeValues: new { area = "Admin", shop.Id }, htmlAttributes: null)</td>
                <td>@shop.Address</td>
                <td>@shop.Town.Name</td>
                <td>TODO</td>
            </tr>
        }
    </tbody>
</table>