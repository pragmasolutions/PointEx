@model PointEx.Web.Models.EducationalInstitutionForm

@{
    ViewBag.Title = PointExResources.EducationalInstitutionDetailTitle;
}

<h3>@PointExResources.EducationalInstitutionDetailTitle</h3>
@Html.BackButton("Index", "EducationalInstitution", "Admin")
<hr />
<div class="form-horizontal">
    @Html.DisplayForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @using (Html.BeginForm("Delete", "EducationalInstitution", new { id = Model.Id }, FormMethod.Post, new { id = "delete-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ActionLink("Editar Est. Educativo", "Edit", "EducationalInstitution", routeValues: new { area = "Admin", Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                <button type="submit" class="btn btn-warning">Eliminar Est. Educativo</button>
            }
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(function () {
            $("#delete-form").on("submit", function () {
                return confirm("Esta seguro que desea eliminar este establecimiento educativo?  Esta operacion no se puede deshacer.");
            });
        });
    </script>
}
