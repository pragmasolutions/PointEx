@using PointEx.Web.Models
@model PointEx.Entities.Beneficiary
@{
    ViewBag.Title = "Información Personal";
    Layout = "~/Areas/Beneficiary/Views/Shared/_Layout.cshtml";
}
@section ContainerTop{
    @Html.Partial("_SearchPrizes", model: new PrizeListFiltersModel())
}
<h2>Información Personal</h2>

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BirthDate, new {@class = "col-md-4 control-label"})
        <div class="col-md-8">
            @Html.DisplayFor(model => model.BirthDate)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Address, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.DisplayFor(model => model.Address)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TownId, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.DisplayFor(model => model.Town.Name)
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.EducationalInstitutionId, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.DisplayFor(model => model.EducationalInstitution.Name)
        </div>
    </div>
</div>




