@using Framework.Common.Web.Helpers
@model List<PointEx.Entities.PointTransaction>

@section banner{
    <img src="/Content/images/banner_micuenta.jpg" width="100%" alt="" />
}


<h3>Historial de acumulación de puntos y canjes</h3>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Concepto</th>
            <th>Débito</th>
            <th>Crédito</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@transaction.TransactionDate.GetValueOrDefault().ToShortDateString()</td>
                <td>@transaction.Description</td>
                <td><span class='@(transaction.Debit == 0 ? "" : "red")'>@transaction.Debit</span></td>
                <td><span class='@(transaction.Credit == 0 ? "" : "green")'>@transaction.Credit</span></td>
                <td>@transaction.Total</td>
            </tr>
        }
    </tbody>
</table>
