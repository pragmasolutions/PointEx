@model PointEx.Web.Models.ShopEditForm

@{
    ViewBag.Title = PointExResources.EditShopProfile;
}

<h3>@PointExResources.EditShopProfile</h3>
<hr />
@using (Html.BeginForm("Edit", "Shop", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Editar Comercio" class="btn btn-default" />
        </div>
    </div>
}