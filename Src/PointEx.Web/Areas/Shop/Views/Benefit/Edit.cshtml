@model PointEx.Web.Models.BenefitForm

@{
    ViewBag.Title = PointExResources.EditBenefitTitle;
}

<h3>@PointExResources.EditBenefitTitle</h3>
@Html.BackButton("Index", "Benefit", "Shop")
<hr />
@using (Html.BeginForm("Edit", "Benefit", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Editar Beneficio" class="btn btn-default" />
        </div>
    </div>
}