@using Framework.Common.Web.Extensions
@using Microsoft.AspNet.Identity
@using PointEx.Service
@using PointEx.Web.Infrastructure
@model int?
@{
    var benefitService = IocContainer.GetContainer().Get<IBenefitService>();
    var currentUser = IocContainer.GetContainer().Get<ICurrentUser>();
    var selectList = benefitService.GetAllByShopId(currentUser.Shop.Id).ToSelectListItem(Model, b => b.Id, b => b.Name, b => b.Id.ToString());
}

@Html.DropDownList("", selectList, "Seleccione Beneficio", new { @class = "form-control" })
