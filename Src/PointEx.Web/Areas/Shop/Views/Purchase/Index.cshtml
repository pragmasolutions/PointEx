@model IList<PointEx.Entities.Dto.PurchaseDto>

<h3>Compras del Día</h3>

@Html.ActionLink("Registrar Ptos Compra", "Create", "Purchase", routeValues: new { area = "Shop" }, htmlAttributes: new { @class = "btn btn-primary" })

<div class="spacer">
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Hora</th>
            <th>Beneficio</th>
            <th>Beneficiario</th>
            <th>Monto</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var purchase in Model)
        {
            <tr>
                <td>@purchase.PurchaseDate.ToShortTimeString()</td>
                <td>@purchase.BenefitName</td>
                <td>@purchase.CardBeneficiaryName</td>
                <td>@purchase.Amount.ToString("c2")</td>
            </tr>
        }
    </tbody>
</table>